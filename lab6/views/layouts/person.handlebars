<article class="person">
  <h1>{{ person.name }}</h1>
  <!--<address>Start Time :<a href="" rel="author">{{event.startTime}}</a></address>-->
  <p>Events </p>
  {{#if events.length}}
    <h3>Attendees</h3>
    <ul>
      {{#each event.attendees}}
        <li><a href="/posts/tag/{{this.name}}">{{this.name}}</a></li>
      {{/each}}
    </ul>
  {{/if}}
    <p>location : {{event.location}}</p>
</article>