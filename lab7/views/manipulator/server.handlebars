<div class="row">
  <div class="col-sm-12">
    <form class="server-form" method="post">
      <div class="form-group">
        <label for="number1">Text</label>
        <input type="text" class="form-control" id="inputText" name="inputText" placeholder="Text" value="{{inputText}}">
      </div>
      <div class="form-group">
        <label for="number2">String</label>
        <input type="text" class="form-control" id="inputString" name="inputString" placeholder="String" value="{{inputString}}">
      </div>
      <div class="form-group">
        <label for="number1">First Number</label>
        <input type="number" class="form-control" id="number1" name="number1" placeholder="First Number" value="{{firstNumber}}">
      </div>
      <div class="form-group">
        <label for="number2">Second Number</label>
        <input type="number" class="form-control" id="number2" name="number2" placeholder="Second Number" value="{{secondNumber}}">
      </div>
      {{#if error }}
      <div class="form-group">
        <div class="alert alert-danger">
          {{ error }}
        </div>
      </div>
      {{/if}}
      <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
      {{#if result }}
      <div class="form-group">
        <div class="alert alert-success">
          The result is: {{ result }}
        </div>
      </div>
      {{/if}}
    </form>
  </div>
</div>